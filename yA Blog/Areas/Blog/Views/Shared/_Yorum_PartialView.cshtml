@model yA_Blog.Areas.Blog.Models.Yorum

@using (Ajax.BeginForm("Yorum","Post",new AjaxOptions()
{
    UpdateTargetId = "yorumlarSection",
    LoadingElementDuration = 300,
    LoadingElementId = "yorumYukleniyor",
    InsertionMode = InsertionMode.InsertAfter,
    OnSuccess = "newCommentSuccess",
    OnFailure = "newCommentFail",
    OnBegin = "newCommentBegin",
    OnComplete = "newCommentComplete",
    HttpMethod = "POST"
},
new {style="margin-top:15px"})) 
{
    @Html.AntiForgeryToken()
    <h4><b>Yorum Yapın</b></h4>
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.EditorFor(model => model.Description, new {htmlAttributes = new {@class = "form-control",placeholder="Mesajınız"}})
            @Html.ValidationMessageFor(model => model.Description, "", new {@class = "text-danger" , style="font-size:14px"})
        </div>

        <div class="form-group">
            <input type="submit" value="Gonder" class="btn btn-primary" />
        </div>
    </div>
}

