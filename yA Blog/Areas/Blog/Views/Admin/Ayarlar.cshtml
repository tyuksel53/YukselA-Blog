@model yA_Blog.Areas.Blog.Models.WebSiteConfig

@{
    ViewBag.Title = "Ayarlar";
    Layout = "~/Areas/Blog/Views/Shared/_Admin_Layout.cshtml";
}

<h2 style="margin-top: 15px">Web sitenizi ayarların</h2>

@if (ViewBag.Success != null)
{
    <div id="SuccessAyarlar" style="margin-top: 15px" class="alert alert-success">
        <strong>Ayarlar Güncellendi <i class="fa fa-smile-o" aria-hidden="true" style="font-size:25px"></i></strong>
    </div>
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" style="margin-top: 15px">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.WebsiteName, htmlAttributes: new { @class = "control-label col-md-2 text-primary" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.WebsiteName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.WebsiteName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.WebsiteInfo, htmlAttributes: new { @class = "control-label col-md-2 text-primary" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.WebsiteInfo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.WebsiteInfo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-check">
            <label class="form-check-label">
                <input class="form-check-input" id="resimUpload" type="checkbox"> Resim upload mı ?
            </label>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IndexImg, htmlAttributes: new { @class = "control-label col-md-10 text-primary" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IndexImg, new { htmlAttributes = new { @class="form-control"} })
                @Html.ValidationMessageFor(model => model.IndexImg, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Subscribers, htmlAttributes: new { @class = "control-label col-md-10 text-primary" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Subscribers, new { htmlAttributes = new { } })
                @Html.ValidationMessageFor(model => model.Subscribers, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-danger" />
            </div>
        </div>
    </div>
}

@section Script
{
    <script>
        $("#resimUpload").change(function() {
            if ($("#resimUpload").prop('checked') === true) {
                $("#IndexImg").val("../../Areas/Blog/Uploads/resimIsmi.uzantisi");
            }
            if ($("#resimUpload").prop('checked') === false) {
                $("#IndexImg").val("");
            }
        });
    </script>
}
