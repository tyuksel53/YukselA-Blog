@model yA_Blog.Areas.Blog.PageModels.KullaniciGuncelleme
@{
    ViewBag.Title = "PasswordReset";
    Layout = "~/Areas/Blog/Views/Shared/_Activation_Layout.cshtml";
}
<h2 style="margin-top: 50px">Şifrenizi Sıfırlaryın</h2>
<hr/>
@using (Html.BeginForm("PasswordReset","Home"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <strong>@Html.LabelFor(model => model.YeniParola, htmlAttributes: new { @class = "" })</strong>
            <div class="col-md-10">
                @Html.EditorFor(model => model.YeniParola, new { htmlAttributes = new { @class = "form-control", placeHolder = "Yeni Sifrenizi Girin" } })
                @Html.ValidationMessageFor(model => model.YeniParola, "", new { @class = "text-danger", style = "font-size:15px" })
            </div>
        </div>
        <div class="form-group">
            <strong>@Html.LabelFor(model => model.YeniParolaOnay, htmlAttributes: new { @class = "" })</strong>
            <div class="col-md-10">
                @Html.EditorFor(model => model.YeniParolaOnay, new { htmlAttributes = new { @class = "form-control", placeHolder = "Yeni Sifre Tekrar" } })
                @Html.ValidationMessageFor(model => model.YeniParolaOnay, "", new { @class = "text-danger", style = "font-size:15px" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@Scripts.Render("~/script/validete")
